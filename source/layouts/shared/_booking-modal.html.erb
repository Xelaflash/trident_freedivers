<div class="modal fade" id="modalBookingForm" tabindex="-1" role="dialog" aria-labelledby="modalBookingForm"
aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modal-title">Book a tour</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      <form class="contact-form validate-form" autocomplete="off"
        action="https://formspree.io/trident.freedivers@gmail.com" method="post">
        <div class="row">
          <div class="col">
            <div class="wrap-input validate-input" data-validate="Name is required">
              <label for="booking-name">Name</label>
              <input class="book-form-input form-input form-control" id="booking-name" type="text" name="name">
              <!-- <span class="focus-input" data-placeholder="Name"></span> -->
            </div>
          </div>
          <div class="col">
            <div class="wrap-input validate-input" data-validate="Valid email is required: ex@abc.xyz">
              <label for="booking-email">Email</label>
              <input class="book-form-input form-input form-control" type="email" name="email" id="booking-email">
              <!-- <span class="focus-input" data-placeholder="Email"></span> -->
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <div class="wrap-input validate-input" data-validate="Phone is required">
              <label for="phone">Phone</label>
              <input class="book-form-input form-input form-control" type="tel" name="phone" id="phone">
              <!-- <span class="focus-input" data-placeholder="Phone Number"></span> -->
            </div>
          </div>
          <div class="col">
            <div class="wrap-input validate-input" data-validate="Accomodation is required">
              <label for="book-accomodation">Accomodation</label>
              <input class="book-form-input form-input form-control" type="text" name="accomodation" id="book-accomodation">
              <!-- <span class="focus-input" data-placeholder="Accomodation in Barbados"></span> -->
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <div class="wrap-input validate-input" data-validate="You need to specify a tour">
              <select class="book-form-input form-input form-control" id="select-tour" name="tour">
                <option selected>Select a tour</option>
                <option>Freediving - 1 Day course</option>
                <option>Freediving - 2 Days certification</option>
                <option>Freediving - Fun Dive</option>
                <option>Spearfishing - Coastal tour</option>
                <option>Spearfishing - Blue water tour</option>
                <option>Spearfishing - Night tour</option>
                <option>Spearfishing - Night tour</option>
                <option>Freediving - Underwater Photography tour</option>
              </select>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <div class="wrap-input validate-input" data-validate="A valid date is required">
              <label for="date">Date</label>
              <input class="book-form-input form-input form-control datepicker" type="date" readonly="readonly"
                id="date" name="date">
              <!-- <span class="focus-input" data-placeholder="Date"></span> -->
            </div>
          </div>
          <div class="col">
            <div class="wrap-input validate-input" data-validate="fins size is required">
              <label for="fins">Fins Size</label>
              <input class="book-form-input form-input form-control" type="text" name="fins size" id="fins">
              <!-- <span class="focus-input" data-placeholder="Fins size"></span> -->
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <div class="wrap-input validate-input" data-validate="Message is required">
              <label for="book-message">Your Message</label>
              <textarea class="book-form-input form-input form-control" name="message" id="book-message"></textarea>
              <!-- <span class="focus-input" data-placeholder="Message"></span> -->
            </div>
          </div>
        </div>
        <div id="book-btn-wrapper">
          <button type="submit" id="booking-form-btn">
            <span>Send</span>
          </button>
        </div>
      </form>
    </div>
  </div>
  </div>
</div>
